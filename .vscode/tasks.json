{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Build Debug",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug .. && cmake --build .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "C/C++: Clean",
            "type": "shell",
            "command": "rm -rf *",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        }
    ]
}